alias vup="(cd $_sot_path_homestead && vagrant up)"

alias vssh="(cd $_sot_path_homestead && vagrant ssh)"

alias vreload="(cd $_sot_path_homestead && vagrant reload --provision)"

alias vyaml="start $_sot_filepath_homestead_yaml"


function vcda()
{
    echo "Running 'composer dump-autoload' from inside vagrant..."

    home_dir=$(echo ~)

    if [[ $PWD =~ ^$home_dir ]]; then

        home_dir_strlen=${#home_dir}
        ((home_dir_strlen++))

        inside_vagrant_path="~"$(pwd | cut -c $home_dir_strlen-)

        (cd $_sot_path_homestead && vagrant ssh -- -t "cd "$inside_vagrant_path" && composer dump-autoload -o")

    else

        echo "You can only run this command from inside the ~ directory"

    fi
}
