if [ ! -f "$_sot_bash_root"_config ]; then

    echo "sot-helpers: '_config' file not found"

else

    source "$_sot_bash_root"_config

    [[ $_sot_load_general -eq 1 ]] && source "$_sot_bash_root"general-aliases 
    [[ $_sot_load_general -eq 1 ]] && source "$_sot_bash_root"general-functions

    [[ $_sot_load_vagrant -eq 1 ]] && source "$_sot_bash_root"vagrant
    
    [[ $_sot_load_php -eq 1 ]]     && source "$_sot_bash_root"php

fi